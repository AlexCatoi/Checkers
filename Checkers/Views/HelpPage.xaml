<Page x:Class="Checkers.Views.HelpPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Checkers.Views"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="HelpPage">

    <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="BackButton" Content="X" HorizontalAlignment="Right" VerticalAlignment="Top" Click="Back" Height="20" Width="20" Margin="0,21,13,0" ></Button>
        <Button x:Name="HTP" Content="How to Play" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding HTP}" Height="50" Width="150" FontSize="24" Margin="0,124,0,0" ></Button>
        <Button x:Name="About" Content="About" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding About}" Height="50" Width="150" FontSize="24" Grid.Row="1" Margin="0,43,0,0"></Button>
    </Grid>
</Page>
