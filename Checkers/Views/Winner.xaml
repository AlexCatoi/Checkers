<Page x:Class="Checkers.Views.Winner"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Checkers.Views"
      xmlns:vm="clr-namespace:Checkers.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="Winner">
    <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="2.5*"></RowDefinition>
            <RowDefinition Height="2.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="WinnerLabel" HorizontalAlignment="Center" VerticalAlignment="Center" FontSize="40" Content=""></Label>
        <Button x:Name="Restart" Content="Restart" FontSize="20" Height="50" Width="150" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Row="1" Command="{Binding Restart}"></Button>
    </Grid>
</Page>
