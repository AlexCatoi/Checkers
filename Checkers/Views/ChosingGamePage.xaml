<Page x:Class="Checkers.Views.ChosingGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Checkers.Views"
      xmlns:vm="clr-namespace:Checkers.ViewModel"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="ChosingGamePage">
   
    <Grid Grid.Column="1">
        <Grid.RowDefinitions>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
            <RowDefinition Height="1.5*"></RowDefinition>
        </Grid.RowDefinitions>
        <Button x:Name="NewGame" Content="New Game" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding StartNewGame}" Height="50" Width="150" FontSize="24" Margin="0,79,0,0" ></Button>
        <Button x:Name="SavedGame" Content="Continue" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding Continue}" Height="50" Width="150" FontSize="24" Grid.Row="1" Margin="0,43,0,0"></Button>
        <Button x:Name="Back" Content="Back" HorizontalAlignment="Center" VerticalAlignment="Top" Command="{Binding Back}" Height="50" Width="150" FontSize="24"  Grid.Row="2" Margin="0,22,0,0"/>
    </Grid>
</Page>
